        Label:
            text: 'Рубли'
            font_size: self.width * .020
            center_x: self.width * .125
            center_y: self.height * .375

        VolumeInput:
            id: tPrice
            input_type: 'number'
            text: '0'
            size_hint: .08, .05
            pos_hint: {'x': .245, 'y': .350}
            font_size: self.width * .20

        Button:
            id: fueling
            font_size: self.width * .15
